/**index.wxss**/
.container{
  padding: 0 10rpx;
}
.stepBar{
  width: 100%;
}
.form{
  width: 100%;
  margin-top: 20rpx;
}
.codebox{
  padding: 0 0 0 30rpx;
}
.codeconter{
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  padding: 20rpx 0 10rpx;
}
.foterbutton{
  margin-top: 60rpx;
}
.label{
  width: 210rpx;
  margin-right:10rpx;
}
.vcoderight{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.vcode-btn{
  background:#387ef5;
  color:#fff;
  padding:8px;
  border-radius:14px;
  white-space: nowrap
}
.codeerror{
  width: 100%;
  text-align: right;
  padding: 31rpx 49rpx 0 0;
  box-sizing: border-box;
}
/*验证码提示语*/
.codemsgbox{
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 10;
    display: flex;
    align-items: flex-end;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .6)
}
.codemsg{
    background-color: #fff;
    padding: 96rpx 40rpx 60rpx;
    border-radius:40rpx 40rpx 0px 0px;
    color: #444;
    font-size: 32rpx;
    line-height: 70rpx;
    position: relative;
}
.textclose{
    position: absolute;
    right: 36rpx;
    top: 40rpx;
    width:  44rpx
}